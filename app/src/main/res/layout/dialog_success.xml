<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/xxLargeMargin"
                android:paddingTop="@dimen/xxxLargePadding"
                android:paddingBottom="@dimen/xxxLargePadding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_title"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textFontWeight="700"
                    android:gravity="center"
                    tools:text=" Successful!" />

                <TextView
                    android:id="@+id/tv_message"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dialog_text_size"
                    android:visibility="visible"
                    tools:text="ksdflksdjflks" />


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ok"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="-10dp"
                android:layout_marginBottom="@dimen/smallMargin"
                android:text="okey"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/mediumText"
                app:layout_constraintBottom_toBottomOf="@id/root"
                app:layout_constraintEnd_toEndOf="@id/root" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</LinearLayout>